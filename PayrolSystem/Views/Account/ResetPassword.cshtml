@model PayrolSystem.Models.DatabaseFirst.MasterLogin
@{
    ViewBag.Title = "Reset Password";
}
<h2 style="color:#ccc">@ViewBag.Title.</h2>

@using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationMessage("Error")

    <div class="form-group">

        <div class="col-md-10">
            <p style="color:#fff">New Password<p>  @Html.PasswordFor(m => m.LogPassword, new { @class = "form-control", @placeholder = "**********" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}