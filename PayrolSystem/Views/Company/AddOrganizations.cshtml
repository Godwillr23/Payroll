@model PayrolSystem.Models.DatabaseFirst.CompanyDetail

@{
    ViewBag.Title = "Add Organization";
}

<div class="jumbotron jumb-app">
    <h2 style="margin-top: 0;">Add Organization <span class="fa fa-shopping-cart"></span></h2>
    @using (Html.BeginForm("AddOrganizations", "Company", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        <p style="color:red; text-align:center; font-size:12px;">@Html.ValidationMessage("Error")</p>
        if (Session["OrganizationSuccess"] != null)
        {
            <p class="alert alert-success">@Session["OrganizationSuccess"].ToString()</p>
        }
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.CompanyName):
                <br />
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.CompanyAddress):
                <br />
                @Html.TextBoxFor(m => m.CompanyAddress, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CompanyAddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.PaymentDay):
                <br />
                @Html.TextBoxFor(m => m.PaymentDay, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.PaymentDay, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label>Level:</label>
                <br />
                @Html.DropDownListFor(x => x.Level, new SelectListItem[]{
                 new SelectListItem() {Text = "-Select Level-", Value= ""},
                 new SelectListItem() {Text = "1", Value= "1"},
                 new SelectListItem() {Text = "2", Value= "2"},
                 new SelectListItem() {Text = "3", Value= "3"},
                 new SelectListItem() {Text = "4", Value= "4"},
                 new SelectListItem() {Text = "5", Value= "5"}
                }, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Level, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script type="text/javascript">
    function Redirect() {
        location.pathname = "Product/CategorySubType";
    };
</script>