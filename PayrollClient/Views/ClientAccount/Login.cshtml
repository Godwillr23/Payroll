@model PayrolSystem.Models.DatabaseFirst.ClientDetail

@{
    ViewBag.Title = "Login";
}

<div class="jumbotron jumb-app">
    <h2 style="text-align:center"><span class="fa fa-lock"></span> Sign-In</h2>
    @using (Html.BeginForm("Login", "ClientAccount", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-10">
                <label>Username:</label>
                <br />
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label>Password:</label>
                <br />
                @Html.PasswordFor(m => m.LogPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LogPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>
            <br />
            <p style="color:red; text-align:center; font-size:12px;">@Html.ValidationMessage("Error")</p>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
