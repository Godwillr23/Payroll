@model IEnumerable<PayrolSystem.Models.DatabaseFirst.PatternTable>

@{
    ViewBag.Title = "Shift";
}

<style type="text/css">
    .col-md-10 {
        color: #fff;
    }

    #radio label {
        float: right;
        display: inline;
    }

    label {
        margin-top: 7px !important;
    }

    radio {
        display: inline;
    }

    p {
        margin: 0px 10px 10px;
    }

    input[type="radio"], input[type="checkbox"] {
        margin: 0;
        margin-left: 20px;
        line-height: normal;
        margin-bottom: 10px;
    }

    .styled-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        box-shadow: 0 0 20px green;
    }
</style>

<div class="jumbotron">
    <h2 style="margin-top: 0;">Patterns</h2>
    @if (Model.Count() > 0)
    {
        <div style="overflow:auto;">
            <table class="table table-hover table-condensed" style="width:100%;margin: 10px;color:midnightblue">
                <thead style="background-color:midnightblue; color:#fff;">
                    <tr>
                        <td><b>Shift ID</b></td>
                        <td><b>Shift</b></td>
                        <td><b>Hours</b></td>
                        <td><b>Clock In</b></td>
                        <td><b>Clock Out</b></td>
                        <td class="DeleteRow"><b></b></td>
                    </tr>
                </thead>
                @foreach (var prod in Model)
                {
                <tr>
                    <td>@prod.PatternID</td>
                    <td>@prod.WorkShift</td>
                    <td>@prod.HoursWorked</td>
                    <td>@prod.ClockInTime</td>
                    <td>@prod.ClockOutTime</td>
                    <td class="DeleteRow">
                        <span class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = prod.PatternID })</span> |
                        <span class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = prod.PatternID })</span>
                    </td>
                </tr>
                }

            </table>
        </div>

    }
    @if (Model.Count() < 1)
    {
        <div class="alert alert-danger">
            <p style="text-align:center; color:red; font-size:14px;">No Pattern found</p>
        </div>
    }
    <br />
    <span class="alert alert-info">Total Patterns: @Model.Count()</span>
    <br />

    <button style="float:right" class="btn btn-primary" type="button" onclick="redirect()">Create Pattern</button>
</div>

<script>
    function redirect() {
        window.location.href = "AddShift";
    }
</script>

