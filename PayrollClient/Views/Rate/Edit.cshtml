@model PayrolSystem.Models.DatabaseFirst.RateTable
@{
    ViewBag.Title = "Edit Rate Details";
}
<h2 style="color: #ccc;">@ViewBag.Title.</h2>

@using (Html.BeginForm("Edit", "Rate", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationMessage("Error")
    <div class="form-group">
        @Html.LabelFor(m => m.Grade, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Grade, new SelectListItem[]{
             new SelectListItem() {Text = "-Select Grade-", Value= ""},
             new SelectListItem() {Text = "A", Value= "A"},
             new SelectListItem() {Text = "B", Value= "B"},
             new SelectListItem() {Text = "C", Value= "C"},
             new SelectListItem() {Text = "D", Value= "D"},
             new SelectListItem() {Text = "E", Value= "E"},
            }, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Grade, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RatePerHour, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RatePerHour, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RatePerHour, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="display:none">
        @Html.TextBoxFor(m => m.RateID, new { @class = "form-control" })
    </div>
    <div class="form-group" style="display:none">
        @Html.TextBoxFor(m => m.CompanyID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}